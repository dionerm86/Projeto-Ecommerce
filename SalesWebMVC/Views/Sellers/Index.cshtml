@model IEnumerable<SalesWebMVC.Models.Seller>



@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Inserir Vendedor</a>
</p>

<table class="table table-striped table-hover" >
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name).Replace("Name", "Nome")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate).Replace("BirthDate", "Data Aniverário")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary).Replace("BaseSalary", "Salário Base")
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                R$ @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="DeleteSeller" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
        }
    </tbody>
</table>

